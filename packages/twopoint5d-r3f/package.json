{
  "name": "@spearwolf/twopoint5d-r3f",
  "description": "a 2.5D graphics library built on @react-three/fiber and three.js",
  "version": "0.1.0-dev",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  },
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "build": "run-s -sn compile makePackageJson",
    "clean": "rimraf build types dist",
    "makePackageJson": "node ../../scripts/makePackageJson.mjs",
    "checkPkgTypes": "cd dist && npx attw --pack",
    "_publishNpmPkg": "npm run checkPkgTypes && node ../../scripts/publishNpmPkg.mjs dist"
  },
  "peerDependencies": {
    "@react-three/fiber": "^8.13.0",
    "@spearwolf/eventize": "^3.0.2",
    "@spearwolf/twopoint5d": "*",
    "react": "^18.2.0",
    "three": "^0.153",
    "use-asset": "^1.0.4",
    "zustand": "^4.3.8"
  }
}
