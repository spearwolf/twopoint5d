{
  "name": "twopoint5d-elements",
  "tags": ["ci"],
  "root": "packages/twopoint5d-elements",
  "targets": {
    "build": {
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "!{projectRoot}/src/**/*.spec.ts",
        "{projectRoot}/package.json",
        "{projectRoot}/package.override.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.lib.json",
        "{projectRoot}/tsconfig.bundle.json",
        "{projectRoot}/bundle.mjs",
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/tsconfig.json",
        "{workspaceRoot}/scripts/makePackageJson.mjs",
        "{workspaceRoot}/scripts/makeBanner.mjs",
        "{workspaceRoot}/scripts/makeBanner/*.mjs"
      ],
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "inputs": ["eslintDefaults", "{projectRoot}/*.mjs"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/package.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.tests.json",
        "{projectRoot}/vite.config.ts",
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/tsconfig.json"
      ]
    }
  }
}
