{
  "name": "@spearwolf/twopoint5d",
  "description": "a library to create 2.5d realtime graphics and pixelart with three.js",
  "version": "0.3.0",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  },
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "build": "run-s -sn compile makePackageJson",
    "clean": "rimraf build types dist",
    "test": "vitest --run",
    "makePackageJson": "node ../../scripts/makePackageJson.mjs",
    "checkPkgTypes": "cd dist && npx attw --pack --ignore-rules cjs-resolves-to-esm",
    "publishNpmPkg": "npm run checkPkgTypes && node ../../scripts/publishNpmPkg.mjs dist"
  },
  "peerDependencies": {
    "@spearwolf/eventize": "^3.4.0",
    "three": "^0.153"
  }
}
