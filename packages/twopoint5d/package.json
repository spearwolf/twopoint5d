{
  "name": "twopoint5d",
  "version": "0.1.0-dev",
  "description": "A refreshingly satisfying 2.5D graphics library built on three.js",
  "main": "twopoint5d.umd.js",
  "module": "twopoint5d.js",
  "types": "types/index.d.ts",
  "exports": {
    "import": "./twopoint5d.js",
    "require": "./twopoint5d.umd.js"
  },
  "sideEffects": false,
  "rollupBuild": {
    "outputDir": ".",
    "outputName": "twopoint5d",
    "externals": [
      "@spearwolf/eventize",
      "three"
    ],
    "esm": {
      "buildName": "es2017"
    },
    "umd": {
      "name": "twopoint5d",
      "buildName": "umd",
      "globals": {
        "@spearwolf/eventize": "eventize",
        "three": "THREE"
      }
    }
  },
  "homepage": "https://github.com/spearwolf/three-vertex-objects/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/three-vertex-objects.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/three-vertex-objects/issues"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "scripts": {
    "build:js": "cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider rollup -c ../../shared-rollup-build/rollup.config.esm.js",
    "watch:js": "cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider rollup -w -c ../../shared-rollup-build/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider rollup -c ../../shared-rollup-build/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider rollup -w -c ../../shared-rollup-build/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch --preserveWatchOutput",
    "analyze:js": "source-map-explorer build/twopoint5d.js",
    "analyze:umd": "source-map-explorer build/twopoint5d.umd.js",
    "watch": "concurrently --names types,js yarn:watch:types yarn:watch:js",
    "build": "concurrently --group --names js,umd,types yarn:build:js yarn:build:umd yarn:build:types",
    "clean": "rimraf build types dist .rollup.cache tsconfig.tsbuildinfo twopoint5d.js twopoint5d.js.map twopoint5d.umd.js twopoint5d.umd.js.map",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label prettier:write eslint:fix",
    "test": "cross-env NODE_ENV=test jest",
    "cbt": "run-s --silent --print-label clean build test"
  },
  "peerDependencies": {
    "@spearwolf/eventize": "^2.0.3",
    "three": "^0.152"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@spearwolf/eventize": "^2.1.1",
    "@types/assert": "^1.5.6",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@types/sinon": "^10.0.15",
    "@types/three": "^0.152.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "concurrently": "^7.6.0",
    "core-js": "^3.30.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-problems": "^7.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "rollup": "^2.79.1",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^15.1.0",
    "source-map-explorer": "^2.5.3",
    "three": "^0.152",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "typescript": "^4.9.5"
  }
}
