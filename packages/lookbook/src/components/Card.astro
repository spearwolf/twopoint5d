---
export interface Props {
  title: string;
  body: string;
  href: string;
  image: string;
}

const { href, title, body, image } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <div class="card-image"></div>
    <p>
      {body}
    </p>
  </a>
</li>

<style define:vars={{ cardTeaserImage: `url(${image})` }}>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0;
    background-color: var(--color-background-dark);
    border-radius: 0.5rem;
    box-shadow: 0 0 1px 1px var(--color-primary-darker);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0 1.3rem 0.7rem;
    border-radius: 0.35rem;
    color: var(--color-primary);
  }
  h2 {
    margin: 0.2rem 0;
    font-size: 1rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: var(--color-primary-darker);
  }
  .link-card:is(:hover, :focus-within) {
    box-shadow: 0 0 1px 1px var(--color-primary);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: var(--color-primary-highlight);
  }
  .card-image {
    margin: 0 -1.3rem;
    aspect-ratio: 16/10;
    background-image: var(--cardTeaserImage);
    background-size: cover;
    background-position: center;
    border-top: 1px solid var(--color-primary-darker);
    border-bottom: 1px solid var(--color-primary-darker);
  }
</style>
