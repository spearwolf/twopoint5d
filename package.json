{
  "name": "@spearwolf/twopoint5d",
  "description": "the art of tiling 2D sprites - a refreshingly satisfying 2.5D graphics library built on three.js",
  "private": true,
  "workspaces": [
    "packages/twopoint5d-r3f",
    "packages/twopoint5d",
    "examples/r3f"
  ],
  "scripts": {
    "twopoint5d": "cd packages/twopoint5d && yarn",
    "twopoint5d-r3f": "cd packages/twopoint5d-r3f && yarn",
    "build:twopoint5d": "yarn twopoint5d build",
    "build:twopoint5d-r3f": "yarn twopoint5d-r3f build",
    "build": "npm-run-all --print-name --sequential build:twopoint5d build:twopoint5d-r3f",
    "test:twopoint5d": "yarn twopoint5d test --verbose",
    "test:twopoint5d-r3f": "yarn twopoint5d-r3f test --verbose",
    "test": "run-s -n test:twopoint5d test:twopoint5d-r3f",
    "clean:twopoint5d": "yarn twopoint5d clean",
    "clean:twopoint5d-r3f": "yarn twopoint5d-r3f clean",
    "clean": "run-p --silent clean:twopoint5d clean:twopoint5d-r3f",
    "watch:twopoint5d": "yarn twopoint5d watch",
    "watch:twopoint5d-r3f": "yarn twopoint5d-r3f watch",
    "watch": "concurrently --names twopoint5d,twopoint5d-r3f yarn:watch:twopoint5d yarn:watch:twopoint5d-r3f",
    "fix:twopoint5d": "yarn twopoint5d fix",
    "fix:twopoint5d-r3f": "yarn twopoint5d-r3f fix",
    "fix": "run-p fix:twopoint5d fix:twopoint5d-r3f",
    "publish-package": "node scripts/publish-package.js",
    "publish:twopoint5d": " yarn publish-package twopoint5d",
    "publish:twopoint5d-r3f": " yarn publish-package twopoint5d-r3f",
    "cbt": "run-s clean build test",
    "examples:r3f": "cd examples/r3f && yarn start",
    "examples:vanilla": "servor . ./examples/vanilla/animated-billboards.html ---reload --browse",
    "examples": "concurrently --names 'examples:vanilla,examples:react|r3f' yarn:examples:vanilla yarn:examples:r3f",
    "dev": "concurrently --raw yarn:examples yarn:watch",
    "start": "yarn examples:vanilla"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^7.4.0",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "shelljs": "^0.8.5"
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.2.4"
}
