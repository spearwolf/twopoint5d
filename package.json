    "@nx/linter": "^16.10.0",
    "@react-three/fiber": "^8.14.5",
    "@react-three/test-renderer": "^8.2.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@spearwolf/eventize": "^3.0.2",
    "@spearwolf/signalize": "^0.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.27",
    "@types/sinon": "^10.0.19",
    "@types/three": "^0.153.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
