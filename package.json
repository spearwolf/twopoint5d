{
  "name": "@spearwolf/twopoint5d",
  "description": "a library to create 2.5d realtime graphics and pixelart with three.js",
  "version": "0.0.0",
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=18.16",
    "pnpm": ">=8.8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm nx run-many -t build",
    "test": "pnpm nx run-many -t test",
    "lint": "pnpm nx run-many -t lint",
    "test:affected": "pnpm nx affected -t test",
    "clean": "pnpm nx run-many -t clean && rimraf dist",
    "publishNpmPkg": "pnpm nx run-many -t publishNpmPkg",
    "update": "pnpm dlx npm-check --update",
    "cbt": "pnpm run-s -sn clean build test",
    "lookbook": "pnpm nx dev lookbook",
    "ci": "pnpm run-s -sn build lint test"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.3",
    "@nx/eslint-plugin": "^17.2.1",
    "@nx/jest": "^17.2.1",
    "@nx/js": "^17.2.1",
    "@nx/linter": "^17.2.1",
    "@react-three/fiber": "^8.15.11",
    "@react-three/test-renderer": "^8.2.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@spearwolf/eventize": "^3.4.1",
    "@spearwolf/signalize": "^0.12.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/sinon": "^17.0.2",
    "@types/three": "^0.153.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "canvas": "^2.11.2",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "happy-dom": "^12.10.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "nx": "^17.2.1",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "sinon": "^17.0.1",
    "three": "^0.153.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.2",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "use-asset": "^1.0.4",
    "vitest": "^1.0.4",
    "zustand": "^4.4.7"
  }
}
