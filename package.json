    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "nx": "^16.10.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.1",
    "sinon": "^16.1.0",
    "three": "^0.153.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "tslib": "^2.6.2",
    "tsup": "^7.2.0",
