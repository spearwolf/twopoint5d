---
import lookbook from '../images/20221122-lookbook-white-fat.svg?url';
import twopoint5d from '../images/twopoint5d-logo.svg?url';
---

<div class="z-50 sticky top-0 y-0">
  <header class="lookbook-header flex justify-start items-center px-1.5 lg:pe-5 lg:ps-4 h-16 backdrop-blur-sm">
    <img class="primary" src={twopoint5d} alt="twopoint5d" />
    <img class="secondary" src={lookbook} alt="lookbook" />

    <div class="rainbow-line">
      <div class="rainbow-line-25"></div>
      <div class="rainbow-line-50"></div>
      <div class="rainbow-line-100"></div>
      <div class="rainbow-line-50"></div>
      <div class="rainbow-line-25"></div>
    </div>
  </header>
</div>

<style>
  .lookbook-header {
    background-color: var(--color-header-background);
    box-shadow: 0 0 20px #4c4c42;
  }

  .rainbow-line {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: linear-gradient(180deg, var(--color-header-background) 0%, rgb(0 0 0) 100%);
  }

  .rainbow-line > div {
    width: 100%;
    height: 1px;
  }

  .rainbow-line-25 {
    background: linear-gradient(in hsl longer hue 45deg, #401 0 0);
  }

  .rainbow-line-50 {
    background: linear-gradient(in hsl longer hue 45deg, #802 0 0);
  }

  .rainbow-line-100 {
    background: linear-gradient(in hsl longer hue 45deg, #f00 0 0);
    height: 2px;
  }

  .lookbook-header img.primary {
    max-height: 48px;
    margin-left: 0.75rem;
  }

  .lookbook-header img.secondary {
    filter: drop-shadow(0 0 2px #ccc) drop-shadow(0 0 15px #999);
    max-height: 48px; /* 66 */
    margin-left: 1rem;
  }
</style>
