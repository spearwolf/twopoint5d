---
import Card from './Card.astro';

import lookbook from '../images/20221122-lookbook-white-fat.svg';

const demos = Object.entries(
  import.meta.glob('../pages/demos/*.json', {
    eager: true,
  }),
).map(([, json]) => json) as {title: string; description?: string; url: string; previewImage?: string; tags?: string[]}[];

const baseUrl = import.meta.env.BASE_URL;

const getHref = (url: string) => {
  if (url.startsWith('http')) {
    return url;
  }
  if (url.startsWith('/')) {
    return `${baseUrl}${url.substring(1)}`;
  }
  return `${baseUrl}${url}`;
};
---

<main>
  <header class="lookbook-header">
    <img class="secondary" src={lookbook} alt="lookbook title" />
  </header>
  <ul role="list" class="demo-card-grid">
    {
      demos.map(({title, description, url, previewImage, tags}) => (
        <Card href={getHref(url)} title={title} body={description} image={previewImage} tags={tags} />
      ))
    }
  </ul>
</main>

<style>
  main {
    margin: auto auto 3rem;
    padding: 1.5rem;
    max-width: 120ch;
  }
  .lookbook-header {
    margin: 0;
    display: flex;
    align-items: center;
  }
  .lookbook-header img.secondary {
    filter: drop-shadow(0 0 2px #ccc) drop-shadow(0 0 15px #999);
    max-height: 66px;
    margin-left: 1rem;
  }
  .demo-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(32ch, 1fr));
    gap: 1.5rem;
    margin-top: 33px;
    padding: 0;
  }
</style>
