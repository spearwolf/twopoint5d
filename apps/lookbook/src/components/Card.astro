---
import demoPreviewImageUrl from '~utils/demoPreviewImageUrl';
import defaultTeaserImage from '../images/20221122-dark-circles-back-1024x.jpg';

export interface Props {
  title: string;
  body: string;
  href: string;
  image?: string;
}

const {href, title, body, image} = Astro.props;

const previewImage = image ? demoPreviewImageUrl(image) : defaultTeaserImage;
---

<li class="link-card">
  <a href={href}>
    <div class="card-image"></div>
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

<style define:vars={{cardTeaserImage: `url(${previewImage})`}}>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0;
    background-color: var(--color-background-dark);
    border-radius: 0.5rem;
    box-shadow: 0 0 10px 5px rgba(0 0 0 / 30%);
    padding: 0;
    overflow: hidden;
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0 1.3rem 0.7rem;
    border-radius: 0.35rem;
    color: var(--color-primary);
  }
  h2 {
    margin: 0.5rem 0;
    font-size: 1rem;
    font-weight: bold;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-primary-darker);
  }
  .link-card:is(:hover, :focus-within) {
    box-shadow: 0 0 1px 1px var(--color-primary);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: var(--color-primary-highlight);
  }
  .card-image {
    margin: 0 -1.3rem;
    aspect-ratio: 16/10;
    background-image: var(--cardTeaserImage);
    background-size: cover;
    background-position: center;
  }
</style>
