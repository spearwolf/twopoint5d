---
import DemoOrDie from '~components/demos/clouds/index.jsx';
import Layout from '~layouts/ReactDemo.astro';
import {title} from './_clouds.json';
---

<Layout title={title}>
  <DemoOrDie client:only />
</Layout>

<style>
  body {
    margin: 0;
    height: 100vh;
    overflow-y: hidden;
    background-color: rgb(100, 118, 136);
    background: linear-gradient(
      rgb(0, 28, 48) 0%,
      rgb(0, 28, 48) 30%,
      rgb(1, 60, 103) 60%,
      rgb(68, 29, 100) 70%,
      rgb(143, 7, 98) 100%
    );
    color: #eee;
  }
</style>
