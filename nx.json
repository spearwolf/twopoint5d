{
  "defaultBase": "main",
  "parallel": 6,
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint"
      },
      "inputs": [
        "eslintDefaults",
        "{projectRoot}/src/**/*.js",
        "{projectRoot}/src/**/*.jsx",
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.tsx"
      ],
      "cache": true
    },
    "test": {
      "executor": "nx:run-script",
      "options": {
        "script": "test"
      },
      "cache": true
    },
    "publishNpmPkg": {
      "executor": "nx:run-script",
      "dependsOn": ["build"],
      "options": {
        "script": "publishNpmPkg"
      }
    }
  },
  "namedInputs": {
    "eslintDefaults": [
      "{projectRoot}/eslint.config.mjs",
      "{workspaceRoot}/eslint.shared.mjs",
      {
        "externalDependencies": ["eslint", "eslint-config-prettier", "eslint-plugin-react", "typescript-eslint", "globals"]
      }
    ]
  }
}
